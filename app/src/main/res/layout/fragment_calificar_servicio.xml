        android:layout_marginTop="140dp"
        android:layout_marginBottom="40dp"
        android:numStars="5" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
