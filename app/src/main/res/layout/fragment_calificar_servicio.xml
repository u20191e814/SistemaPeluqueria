    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    tools:context=".ui.CalificarServicioFragment" >

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
