<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context=".ui.MostrarEspecialistasFragment">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="105dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:text="Provincia:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="76dp"
        android:layout_height="37dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="26dp"
        android:text="Distrito:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/btnBuscarEspecialistas"
        android:layout_width="178dp"
        android:layout_height="49dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="105dp"
        android:text="Buscar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cboDistritoMostrarEspecialistas" />

    <TextView
        android:id="@+id/lblverEnMapaEspecialistas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="105dp"
        android:text="@string/verEnMapaEspecialistas"
        android:drawableStart="@drawable/ic_mapa_24"

        android:textColor="@color/black"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBuscarEspecialistas" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleMostrarEspecialistas"
        android:layout_width="373dp"
        android:layout_height="419dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblverEnMapaEspecialistas" />

    <Spinner
        android:id="@+id/cboRegionMostrarEspecialistas"

        android:layout_width="248dp"
        android:layout_height="43dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Spinner
        android:id="@+id/cboProvinciaMostrarEspecialistas"
        android:layout_width="242dp"
        android:layout_height="51dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/cboRegionMostrarEspecialistas" />

    <Spinner
        android:id="@+id/cboDistritoMostrarEspecialistas"
        android:layout_width="251dp"
        android:layout_height="55dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/cboProvinciaMostrarEspecialistas" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="88dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="RegiÃ³n:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>






