<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgEspecialista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_peluquera1_foreground" />

            <TextView
                android:id="@+id/txtNombreMostrarEspecialistas"
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="2dp"
                android:text="Jessica Ramirez"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgEspecialista"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lblEspecialidadMostrarEspecialistas"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="69dp"
                android:text="Especialidad"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgEspecialista"
                app:layout_constraintTop_toBottomOf="@+id/txtNombreMostrarEspecialistas" />

            <TextView
                android:id="@+id/txtEspecialidadMostrarCategoria"
                android:layout_width="204dp"
                android:layout_height="18dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="2dp"
                android:text="Peinados"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgEspecialista"
                app:layout_constraintTop_toBottomOf="@+id/lblEspecialidadMostrarEspecialistas" />

            <TextView
                android:id="@+id/lblDireccionMostrarEspecialistas"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="73dp"
                android:text="DirecciÃ³n"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgEspecialista"
                app:layout_constraintTop_toBottomOf="@+id/txtEspecialidadMostrarCategoria" />

            <TextView
                android:id="@+id/txtDireccionMostrarEspecialistas"
                android:layout_width="214dp"
                android:layout_height="18dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="2dp"
                android:text="Lince Av. Arequipa"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ratingbarMostrarEspecialistas"
                app:layout_constraintTop_toBottomOf="@+id/lblDireccionMostrarEspecialistas" />

            <RatingBar
                android:id="@+id/ratingbarMostrarEspecialistas"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="104dp"
                android:layout_height="26dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/app_name"
                android:numStars="5"
                android:progressTint="@color/ratinbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgEspecialista"
                tools:rating="4.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>