<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/imgEspecialista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:paddingRight="2dp"
            app:srcCompat="@mipmap/ic_peluquera1_foreground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNombreMostrarEspecialistas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="2dp"
                android:text="Jessica Ramirez"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/lblEspecialidadMostrarEspecialistas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="0dp"
                android:text="Especialidad"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtEspecialidadMostrarCategoria"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="2dp"
                android:text="Peinados"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/lblDireccionMostrarEspecialistas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="0dp"
                android:text="DirecciÃ³n"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtDireccionMostrarEspecialistas"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="2dp"
                android:text="Lince Av. Arequipa"
                android:textAlignment="center" />

            <RatingBar
                android:id="@+id/ratingbarMostrarEspecialistas"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:contentDescription="calit"
                android:isIndicator="true"

                android:numStars="5"
                android:progressTint="@color/ratinbar"
                android:rating="5"
                android:scaleX=".4"
                android:scaleY=".4"


                />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>